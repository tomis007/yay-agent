[Unit]
Description=Yet Another Yubikey agent
Documentation=https://github.com/tomis007/yay-agent

[Service]
ExecStart=yay-agent bind -a %t/yay-agent/yay-agent.sock
ExecReload=/bin/kill -HUP $MAINPID
IPAddressDeny=any
RestrictAddressFamilies=AF_UNIX
RestrictNamespaces=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
LockPersonality=yes
NoNewPrivileges=yes
KeyringMode=private
UMask=0177
RuntimeDirectory=yay-agent

[Install]
WantedBy=default.target

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
        <key>Label</key>
        <string>com.github.yay-agent</string>

        <key>ProgramArguments</key>
        <array>
                <string>/usr/local/bin/yay-agent</string>
                <string>bind</string>
                <string>-l</string>
        </array>

        <key>ServiceDescription</key>
        <string>Yubikey SSH Agent</string>

        <key>StandardErrorPath</key>
        <string>/tmp/yay-agent.log</string>
        <key>StandardOutPath</key>
        <string>/tmp/yay-agent.log</string>

        <key>Sockets</key>
        <dict>
                <key>Listeners</key>
                <dict>
                        <key>SecureSocketWithKey</key>
                        <string>SSH_YAYAUTH_SOCK</string>
                </dict>
        </dict>
        <key>RunAtLoad</key>
        <true/>
</dict>
</plist>
